%div{id: 'controls'}
  %div{class: 'form-check form-check-inline col-xs-6 col-sm-4 col-md-3'}
    %label{class: 'form-check-label'}
      %input{class: 'form-check-input', type: 'checkbox', id: 'hide-lore', value: 'lore', checked: true} &nbsp Hide Lores

  %div{class: 'form-check form-check-inline col-xs-6 col-sm-4 col-md-3'}
