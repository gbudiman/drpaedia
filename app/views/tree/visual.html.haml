      %span{class: 'caret'}
    %ul{class: 'dropdown-menu', id: 'unhide-profession'}
  %div{class: 'col-xs-6 col-sm-4 col-md-3 btn-group'}
    %button{class: 'btn btn-link', 'data-toggle': 'dropdown'}
      Unhide Skill
      %span{class: 'caret'}
    %ul{class: 'dropdown-menu', id: 'unhide-skill'}
  %div{class: 'col-xs-6 col-sm-4 col-md-3'}
    %button{class: 'btn btn-link', id: 'unhide-all'} Unhide All

