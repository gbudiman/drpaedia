:css
  #vis-table {
    margin-top: 64px;
  }

  / .head-rotate {
  /   transform: translate(-27px, 27px) rotate(-90deg);
  /   //width: 24px;
  /   white-space: pre;
  / }

  .row-head {
    padding: 1px !important;
    font-weight: bold;
  }

  / .fixed-table-body-columns, .fixed-table-header-columns {
  /   width: 200px !important;
  /   font-weight: bold;
  / }

  #vis-table > thead > tr > th.cols-splitter {
    max-width: 4px;
    max-height: 4px;
  }

  #vis-table > thead > tr > th.head-rotate, th.head-rotate {
    max-width: 20px;
    height: 80px;
    //transform: translate(-64px, 52px) rotate(-90deg);
    transform: rotate(-90deg) translateY(10px);
    transform-origin: 0% 100%;
    //width: 24px;
    white-space: pre;
  }

  table.table-hover > thead > tr {
    height: 128px;
  }

  thead > tr > th.head-rotate > div.th-inner {
    overflow: unset !important;
    text-overflow: unset !important;
    padding: 0px !important;
    white-space: pre !important;
    line-height: 0px !important;
  }

  #vis-table > thead > tr > th > div.th-inner {
    padding: 0 !important;
    overflow: unset !important;
  }

  .cell {
    vertical-align: middle !important;
    text-align: center;
    padding: 1px !important;
  }

  .opencell {
    //background-color: yellow;
    color: #aaa;
  }

  .accesscell {
    background-color: green;
    color: white;
    vertical-align: middle;
  }

  .uniquecell, .uniquecell:hover {
    background-color: blue;
  }

  .disadvcell {
    background-color: red;
    color: #ddd;
  }

  .separatorcell {
    background-color: #aaa;
    width: 8px;
  }

  .clickable {
    cursor: pointer;
  }

  .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
